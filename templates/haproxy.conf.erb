global
	log /dev/log    local0 info
        maxconn 4096
        user haproxy
        group haproxy
        stats socket    /tmp/haproxy.sock mode 777

defaults
        log global
        mode http
        option httplog
        option dontlognull
	option log-health-checks
        option redispatch
        option httpchk GET /
        option allbackups
	option http-server-close
        maxconn 2000
        retries 3
        timeout connect 6000ms
        timeout client 12000ms
        timeout server 12000ms

listen bigcouch-data 127.0.0.1:15984
  balance roundrobin
    <% @db_nodes.each do |key, value| %>
      server <%= key %> <%= value %>:5984 check
    <% end %>

listen bigcouch-mgr 127.0.0.1:15986
  balance roundrobin
        <% @db_nodes.each do |key, value| %>
      server <%= key %> <%= value %>:5986 check
    <% end %>

listen haproxy-stats 127.0.0.1:22002
  mode http
  stats uri /